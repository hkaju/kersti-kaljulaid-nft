    "ethers": "^5.4.7",
    "hardhat": "^2.6.1",
    "hardhat-contract-sizer": "^2.1.1",
    "hardhat-deploy": "^0.9.3",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-watcher": "^2.1.1"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.1"
